    <activity android:name="eks.youtube.BenytVideoView" android:configChanges="orientation"/>


    <!-- Levende baggrund på hjemmeskærmen der viser en esperanto-stjerne -->
    <service android:name="eks.levendebaggrund.Esperantotapet"
        android:permission="android.permission.BIND_WALLPAPER">
      <intent-filter>
        <action android:name="android.service.wallpaper.WallpaperService" />
      </intent-filter>
      <meta-data android:name="android.service.wallpaper"
                 android:resource="@xml/levendebaggrund_esperanto" />
    </service>


    <!-- Levende ikon på hjemmeskærmen der viser hvad klokken er -->
    <receiver android:name="eks.levendeikon.VisKlokkenIkon" >
      <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
      </intent-filter>
      <meta-data android:name="android.appwidget.provider"
                 android:resource="@xml/levendeikon_visklokken" />
    </receiver>

		<!-- C2DM - Cloud 2 device meddelelser -->
    <activity android:name="eks.c2dm.MeddelelserFraServer"/>

    <!-- Broadcastreciever der modtager C2DM-meddelelser.
		     android:permission sikrer at andre apps ikke kan 'fake' et broadcast  -->
    <receiver android:name="eks.c2dm.C2DMReceiver" android:permission="com.google.android.c2dm.permission.SEND">
        <!-- Filter for meddelelsen -->
        <intent-filter>
            <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            <category android:name="dk.nordfalk.android.elementer" />
        </intent-filter>
        <!-- Filter til registrerings-id -->
        <intent-filter>
            <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
            <category android:name="dk.nordfalk.android.elementer" />
        </intent-filter>
    </receiver>

    <!-- aktivitet som kan ses fra startskærmen -->
    <activity android:name="dk.nordfalk.aktivitetsliste.Aktivitetsliste" android:label="AndroidElementer">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Jeg skjuler alle aktiviteter der står herunder fra Aktivitetsliste -->
    <activity android:name="dk.nordfalk.aktivitetsliste.VisKildekodeIWebView"/>
    <activity android:name="dk.nordfalk.aktivitetsliste.VisKildekode">
      <!-- bruges af metoden VisKildekode.findWebUrl() -->
      <meta-data android:name="web_url" android:value="http://code.google.com/p/android-eksempler/source/browse/trunk/AndroidElementer/" />
    </activity>




